{
  "compilerOptions": {
    "paths": {
      "@containers/*": ["./src/containers/*"],
      "@style/*": ["./src/style/*"],
      "@utils/*": ["./src/utils/*"],
      "@class/*": ["./src/class/*"],
      "@type/*": ["./src/type/*"],
    }, 
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "ES2015",
    "lib": [
      "ES6",
      "DOM"
    ],
    "strict": true,  
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx", // react18这里也可以改成react-jsx
  },
  "include": [
    "./src/**/*"
  ]
}